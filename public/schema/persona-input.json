{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uri"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "nickname": {
      "type": "string"
    },
    "givenName": {
      "type": "string"
    },
    "familyName": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "format": "email",
      "pattern": "^(?!\\.)(?!.*\\.\\.)([A-Za-z0-9_'+\\-\\.]*)[A-Za-z0-9_+-]@([A-Za-z0-9][A-Za-z0-9\\-]*\\.)+[A-Za-z]{2,}$"
    },
    "additionalEmails": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "email",
        "pattern": "^(?!\\.)(?!.*\\.\\.)([A-Za-z0-9_'+\\-\\.]*)[A-Za-z0-9_+-]@([A-Za-z0-9][A-Za-z0-9\\-]*\\.)+[A-Za-z]{2,}$"
      }
    },
    "phone": {
      "type": "string"
    },
    "image": {
      "type": "string",
      "format": "uri"
    },
    "bio": {
      "type": "string"
    },
    "homepage": {
      "type": "string",
      "format": "uri"
    },
    "oidcIssuer": {
      "type": "string",
      "format": "uri"
    },
    "inbox": {
      "type": "string",
      "format": "uri"
    },
    "preferencesFile": {
      "type": "string",
      "format": "uri"
    },
    "publicTypeIndex": {
      "type": "string",
      "format": "uri"
    },
    "privateTypeIndex": {
      "type": "string",
      "format": "uri"
    }
  },
  "required": [
    "name"
  ],
  "additionalProperties": false
}